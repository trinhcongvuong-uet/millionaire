<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/play_bg"
>
    <ImageView android:layout_width="180dp"
               android:layout_height="150dp"
               android:layout_marginBottom="74dp"
               android:layout_above="@+id/btn_instruction"
               android:layout_centerHorizontal="true"
               android:background="@drawable/logo"
    />

    <Button android:layout_width="300dp"
            android:layout_height="56dp"
            android:id="@+id/btn_play_game"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_in_menu"
            android:text="Play Game"
            android:textSize="27dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@android:color/holo_blue_dark"
            />
    <Button android:layout_width="300dp"
            android:layout_height="56dp"
            android:id="@+id/btn_instruction"
            android:layout_below="@+id/btn_play_game"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_in_menu"
            android:text="Instruction"
            android:textSize="27dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@android:color/holo_blue_dark"
    />
    <Button android:layout_width="300dp"
            android:layout_height="56dp"
            android:id="@+id/btn_hightscore"
            android:layout_below="@+id/btn_instruction"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_in_menu"
            android:text="Hight Score"
            android:textSize="27dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@android:color/holo_blue_dark"
    />
    <Button android:layout_width="300dp"
            android:layout_height="56dp"
            android:id="@+id/btn_exit_game"
            android:layout_below="@+id/btn_hightscore"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_in_menu"
            android:text="Exit Game"
            android:textSize="27dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@android:color/holo_blue_dark"
    />


</RelativeLayout>